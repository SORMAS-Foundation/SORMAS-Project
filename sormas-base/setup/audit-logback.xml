<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">

        <file>/tmp/audit-log-sormas.log</file>
        <encoder>
            <pattern>%logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="FILE"/>
    </root>
</configuration>