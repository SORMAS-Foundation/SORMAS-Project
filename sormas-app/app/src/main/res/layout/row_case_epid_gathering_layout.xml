<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="data" type="de.symeda.sormas.app.backend.epidata.EpiDataGathering" />

        <variable name="callback" type="de.symeda.sormas.app.core.IEntryItemOnClickListener" />
    </data>

    <LinearLayout
        android:id="@+id/rowListItemSocialEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/controlReadTextMarginBottom"
        android:padding="@dimen/rowListItemPadding"
        android:orientation="vertical"
        android:background="@drawable/selector_list_section_row_background"
        android:elevation="2dp"
        android:onClickListener="@{(view) -> callback.onClick(view, data)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.symeda.sormas.app.component.controls.ControlTextReadField
                android:id="@+id/epiDataGathering_gatheringDate"
                app:value="@{data.gatheringDate}"
                style="@style/ControlFirstOfTwoColumnsStyle" />

            <de.symeda.sormas.app.component.controls.ControlTextReadField
                android:id="@+id/epiDataGathering_description"
                android:textAlignment="viewEnd"
                app:value="@{data.description}"
                style="@style/ControlSecondOfTwoColumnsStyle" />

        </LinearLayout>

        <de.symeda.sormas.app.component.controls.ControlTextReadField
            android:id="@+id/epiDataGathering_gatheringAddress"
            app:value="@{data.gatheringAddress}"
            app:maxLines="5"
            style="@style/ControlSingleColumnStyle" />

    </LinearLayout>

</layout>