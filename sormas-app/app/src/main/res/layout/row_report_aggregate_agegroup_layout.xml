<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="data" type="de.symeda.sormas.app.backend.report.AggregateReport"/>
        <import type="de.symeda.sormas.api.utils.AgeGroupUtils" />
    </data>

    <LinearLayout
        android:id="@+id/row_item"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_list_activity_row_no_unread_status"
        android:paddingLeft="@dimen/rowListItemHorizontalMargin"
        android:paddingRight="@dimen/rowListItemHorizontalMargin">

        <TextView
            android:id="@+id/age_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textSize="16sp"
            android:textColor="@color/listActivityRowTertiaryText"
            android:fontFamily="sans-serif-light"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:paddingTop="18dp"
            android:paddingEnd="8dp"
            app:value="@{AgeGroupUtils.createCaption(data.ageGroup)}" />

        <de.symeda.sormas.app.component.controls.ControlTextEditField
            android:id="@+id/aggregateReport_newCases"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            app:inputType="number"
            app:slim="true"
            app:value="@={data.newCases}"
            app:showCaption="false" />

        <de.symeda.sormas.app.component.controls.ControlTextEditField
            android:id="@+id/aggregateReport_labConfirmations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            app:inputType="number"
            app:slim="true"
            app:value="@={data.labConfirmations}"
            app:showCaption="false" />

        <de.symeda.sormas.app.component.controls.ControlTextEditField
            android:id="@+id/aggregateReport_deaths"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:paddingStart="2dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            app:inputType="number"
            app:slim="true"
            app:value="@={data.deaths}"
            app:showCaption="false" />

        <TextView
            android:id="@+id/expired"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:paddingStart="6dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/listActivityRowTertiaryText"
            android:fontFamily="sans-serif-light"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:paddingTop="18dp"
            android:paddingEnd="8dp"
            app:value="test" />

    </LinearLayout>

</layout>

