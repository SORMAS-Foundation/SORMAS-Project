<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_list_filters">

    <data>
        <import type="de.symeda.sormas.api.i18n.I18nProperties" />
        <import type="de.symeda.sormas.api.i18n.Strings" />
        <import type="de.symeda.sormas.api.i18n.Captions" />
        <import type="de.symeda.sormas.api.action.ActionDto"/>
        <import type="de.symeda.sormas.app.component.controls.ControlButtonType"/>

        <variable name="criteria" type="de.symeda.sormas.app.news.NewsFilterCriteria"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

     <!--       <de.symeda.sormas.app.component.controls.FilterTextField
                android:id="@+id/text_filter"
                app:hint="@{I18nProperties.getCaption(Captions.newsSearch)}"
                app:showCaption="false"
                style="@style/ControlSingleColumnStyle" />
            >-->


            <de.symeda.sormas.app.component.controls.FilterSpinnerField
                android:id="@+id/region_filter"
                app:hint="@{I18nProperties.getCaption(Captions.regionName)}"
                app:showCaption="false"
                app:value="@={criteria.region}"
                style="@style/ControlSingleColumnStyle" />
            <de.symeda.sormas.app.component.controls.FilterSpinnerField
                android:id="@+id/district_filter"
                app:hint="@{I18nProperties.getCaption(Captions.districtName)}"
                app:showCaption="false"
                app:value="@={criteria.district}"
                style="@style/ControlSingleColumnStyle" />
            <de.symeda.sormas.app.component.controls.FilterSpinnerField
                android:id="@+id/community_filter"
                app:hint="@{I18nProperties.getCaption(Captions.communityName)}"
                app:showCaption="false"
                app:value="@={criteria.community}"
                style="@style/ControlSingleColumnStyle" />
            <de.symeda.sormas.app.component.controls.FilterSpinnerField
                android:id="@+id/priority_filter"
                app:hint="@{I18nProperties.getPrefixCaption(ActionDto.I18N_PREFIX, ActionDto.PRIORITY)}"
                app:showCaption="false"
                app:value="@={criteria.riskLevel}"
                style="@style/ControlSingleColumnStyle" />
            <de.symeda.sormas.app.component.controls.ControlDateField
                android:id="@+id/start_date_filter"
                app:hint="@{I18nProperties.getCaption(Captions.date)}"
                app:showCaption="false"
                app:value="@={criteria.startDate}"
                style="@style/ControlSingleColumnStyle" />
            <de.symeda.sormas.app.component.controls.ControlDateField
                android:id="@+id/end_date_filter"
                app:hint="@{I18nProperties.getCaption(Captions.date)}"
                app:showCaption="false"
                app:value="@={criteria.endDate}"
                style="@style/ControlSingleColumnStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <de.symeda.sormas.app.component.controls.ControlButton
                    android:id="@+id/apply_filters"
                    android:text="@string/action_apply_filters"
                    app:buttonType="@{ControlButtonType.FILTER_PRIMARY}"
                    style="@style/ControlFirstOfTwoColumnsStyle"/>

                <de.symeda.sormas.app.component.controls.ControlButton
                    android:id="@+id/reset_filters"
                    android:text="@string/action_reset_filters"
                    app:buttonType="@{ControlButtonType.FILTER_SECONDARY}"
                    style="@style/ControlFirstOfTwoColumnsStyle" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>